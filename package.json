{
  "private": false,
  "name": "satsang-backend",
  "version": "0.0.2",
  "description": "satsang-backend",
  "main": "build/main/index.js",
  "typings": "build/main/index.d.ts",
  "module": "build/module/index.js",
  "repository": "https://github.com/Duranzno/satsang-backend",
  "license": "MIT",
  "keywords": [],
  "scripts": {
    "commit": "cz",
    "dev": "ts-node src/index.ts",
    "heroku": "ts-node build/main/index.js",
    "build": "run-p build:*",
    "build:main": "tsc -p tsconfig.json",
    "build:module": "tsc -p tsconfig.module.json",
    "fix": "run-s fix:*",
    "fix:prettier": "prettier \"src/**/*.ts\" --write -l",
    "fix:lint": "eslint src --ext .ts --fix",
    "test": "run-s build test:*",
    "test:lint": "eslint src --ext .ts",
    "test:spelling": "cspell \"{README.md,.github/*.md,src/**/*.ts[x]}\"",
    "test:unit": "jest",
    "check-cli": "run-s test diff-integration-tests check-integration-tests",
    "check-integration-tests": "run-s check-integration-test:*",
    "diff-integration-tests": "mkdir -p diff && rm -rf diff/test && cp -r test diff/test && rm -rf diff/test/test-*/.git && cd diff && git init --quiet && git add -A && git commit --quiet --no-verify --allow-empty -m 'WIP' && echo '\\n\\nCommitted most recent integration test output in the \"diff\" directory. Review the changes with \"cd diff && git diff HEAD\" or your preferred git diff viewer.'",
    "watch:build": "tsc -p tsconfig.json -w",
    "watch:test": "jest --watch",
    "watch:dev": "ts-node-dev src/index.ts --respawn --watch src",
    "cov": "run-s build test:unit cov:generate && open-cli coverage/index.html",
    "cov:generate": "jest --coverage",
    "cov:send": "run-s cov:generate && codecov",
    "version": "standard-version",
    "reset-hard": "git clean -dfx && git reset --hard && yarn",
    "prepare-release": "run-s reset-hard test  version ",
    "pre-push": "git-branch-is -q main &&  npm run fix && npm run test || echo No hooks needed on pre-push for this branch "
  },
  "engines": {
    "node": ">=10"
  },
  "dependencies": {
    "@prisma/cli": "^2.10.2",
    "@prisma/client": "^2.10.2",
    "@sendgrid/mail": "^7.4.0",
    "@types/node-fetch": "^2.5.7",
    "body-parser": "^1.19.0",
    "compression": "^1.7.4",
    "cookie-parser": "^1.4.5",
    "cors": "^2.8.5",
    "dotenv": "^8.2.0",
    "express": "^4.17.1",
    "express-cache-controller": "^1.1.0",
    "express-session": "^1.17.1",
    "express-winston": "^4.0.5",
    "faker": "^5.1.0",
    "helmet": "^4.2.0",
    "node-fetch": "^2.6.1",
    "secure-password": "^4.0.0",
    "swagger-jsdoc": "^5.0.1",
    "swagger-ui-express": "^4.1.4",
    "winston": "^3.3.3",
    "winston-daily-rotate-file": "^4.5.0",
    "yamljs": "^0.3.0"
  },
  "devDependencies": {
    "@types/body-parser": "^1.19.0",
    "@types/compression": "^1.7.0",
    "@types/cookie-parser": "^1.4.2",
    "@types/cors": "^2.8.8",
    "@types/dotenv": "^8.2.0",
    "@types/express": "^4.17.8",
    "@types/express-session": "^1.17.0",
    "@types/express-winston": "^4.0.0",
    "@types/faker": "^5.1.4",
    "@types/helmet": "^4.0.0",
    "@types/jest": "^26.0.15",
    "@types/node": "^14.14.7",
    "@types/supertest": "^2.0.10",
    "@types/swagger-jsdoc": "^3.0.2",
    "@types/swagger-ui-express": "^4.1.2",
    "@types/winston": "^2.4.4",
    "@types/yamljs": "^0.2.31",
    "@typescript-eslint/eslint-plugin": "^4.0.1",
    "@typescript-eslint/parser": "^4.0.1",
    "codecov": "^3.5.0",
    "commitizen": "^4.2.2",
    "cspell": "^4.1.0",
    "cz-conventional-changelog": "^3.3.0",
    "eslint": "^7.8.0",
    "eslint-config-prettier": "^6.11.0",
    "eslint-plugin-eslint-comments": "^3.2.0",
    "eslint-plugin-functional": "^3.0.2",
    "eslint-plugin-import": "^2.22.0",
    "gh-pages": "^3.1.0",
    "git-branch-is": "^4.0.0",
    "husky": "4",
    "jest": "^26.6.3",
    "jest-environment-node": "^26.6.2",
    "nanoid": "^3.1.16",
    "npm-run-all": "^4.1.5",
    "open-cli": "^6.0.1",
    "pg": "^8.4.2",
    "pinst": "^2.0.0",
    "prettier": "^2.1.1",
    "standard-version": "^9.0.0",
    "supertest": "^6.0.1",
    "ts-jest": "^26.4.4",
    "ts-node": "^9.0.0",
    "ts-node-dev": "^1.0.0",
    "typescript": "^4.0.5"
  },
  "files": [
    "build/main",
    "build/module",
    "!**/*.spec.*",
    "!**/*.json",
    "CHANGELOG.md",
    "LICENSE",
    "README.md"
  ],
  "config": {
    "commitizen": {
      "path": "cz-conventional-changelog"
    }
  },
  "prettier": {
    "semi": false,
    "tabWidth": 2,
    "printWidth": 100
  },
  "husky": {
    "hooks": {
      "pre-push": "npm run pre-push"
    }
  }
}